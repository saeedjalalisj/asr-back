{
  "name": "tts",
  "version": "0.1.0",
  "description": "text to speech",
  "main": "index.js",
  "repository": "git@github.com:saeedjalalisj/tts.git",
  "author": "Saeed Jalali",
  "license": "MIT",
  "scripts": {
    "start:dev": "npx nodemon",
    "build": "rimraf ./dist && tsc",
    "db:create:dev": "cross-env NODE_ENV=development node scripts/db/create",
    "db:create:test": "cross-env NODE_ENV=test node scripts/db/create",
    "db:delete:dev": "cross-env NODE_ENV=development node scripts/db/delete",
    "db:delete:test": "cross-env NODE_ENV=test node scripts/db/delete",
    "db:flush:dev": "cross-env NODE_ENV=development npm run db:delete:dev && npm run db:create:dev",
    "db:flush:test": "cross-env NODE_ENV=test npm run db:delete:test && npm run db:create:test",
    "migrate:dev": "npm run build && cross-env NODE_ENV=development dotenv -e .env sequelize db:migrate",
    "migrate:test": "npm run build && cross-env NODE_ENV=test dotenv -e .env sequelize db:migrate --env test",
    "migrate:prod": "sequelize db:migrate --env production",
    "start": "npm run build && node dist/index.js",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "testWithCoverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/express-rate-limit": "^6.0.0",
    "@types/formidable": "^2.0.5",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/jest": "^29.2.4",
    "@types/pg": "^8.6.6",
    "@types/redis": "^4.0.11",
    "@types/sequelize": "^4.28.14",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.20.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dompurify": "^2.4.1",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "formidable": "^2.1.1",
    "helmet": "^6.0.1",
    "jest": "^29.3.1",
    "jsdom": "^20.0.3",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.8.0",
    "rand-token": "^1.0.1",
    "redis": "3.1.2",
    "sequelize": "^6.28.0",
    "sequelize-cli": "^6.5.2",
    "ts-jest": "^29.0.3",
    "uuid": "^9.0.0",
    "validator": "^13.7.0"
  }
}
